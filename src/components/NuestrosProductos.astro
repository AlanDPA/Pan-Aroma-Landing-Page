  document.addEventListener("DOMContentLoaded", () => {
    let elms = document.getElementsByClassName("splide");

    for (var i = 0; i < elms.length; i++) {
      new Splide(elms[i] as HTMLElement, {
        type: "loop",
      perPage: 3,
      gap: "1rem",
      arrows: false,
      breakpoints: {
        1024: {
          perPage: 2,
          arrows: true,
        },
        640: {
          perPage: 1,
          arrows: true,
        },
      },
      }).mount()
    }
  });
</script>

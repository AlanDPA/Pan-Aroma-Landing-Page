</section>

<script>
  import Splide from "@splidejs/splide";

  document.addEventListener("DOMContentLoaded", () => {
    const splide = new Splide(".splide", {
      type: "loop",
      perPage: 3,
      gap: "1rem",
      arrows: false,
      breakpoints: {
        640: {
          perPage: 1,
          arrows: true,
        },
      },
    });

    splide.mount();
  });
</script>
